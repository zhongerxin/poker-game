{
	"name": "poker-game",
	"description": "Poker MCP server + widgets",
	"private": true,
	"type": "module",
	"workspaces": [
		"server",
		"web"
	],
	"scripts": {
		"build": "npm run build:web && npm run build:server",
		"build:web": "npm --workspace web run build",
		"build:server": "npm --workspace server run build",
		"dev": "npm run build:web && npm run build:server && XDG_CONFIG_HOME=.wrangler XDG_CACHE_HOME=.wrangler XDG_STATE_HOME=.wrangler wrangler dev --ip 127.0.0.1 --port 8787",
		"deploy": "npm run build && wrangler deploy",
		"cf-typegen": "wrangler types"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.24.3",
		"@radix-ui/react-slot": "^1.2.4",
		"@tailwindcss/vite": "^4.1.17",
		"agents": "^0.2.31",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"hono": "4.10.7",
		"lucide-react": "^0.556.0",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.17",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.15.3",
		"@eslint/js": "9.39.1",
		"@types/node": "^24.10.1",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.1",
		"eslint": "9.39.1",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-react-refresh": "0.4.24",
		"globals": "16.5.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "5.8.3",
		"typescript-eslint": "8.48.0",
		"vite": "^6.0.0",
		"wrangler": "4.51.0"
	}
}
